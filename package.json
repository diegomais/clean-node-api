{
  "name": "clean-node-api",
  "version": "1.0.0",
  "description": "Rest API in NodeJS using Test Driven Development, Clean Architecture and Design Patterns.",
  "main": "src/main/index.js",
  "scripts": {
    "prepare": "husky install",
    "test": "jest",
    "test:ci": "npm test -- --ci --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/diegomais/clean-node-api.git"
  },
  "keywords": [
    "Node.js",
    "Test Driven Development",
    "Clean Architecture",
    "Design Patterns"
  ],
  "author": "Diego Mais <diegomais.dev@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/diegomais/clean-node-api/issues"
  },
  "homepage": "https://github.com/diegomais/clean-node-api#readme",
  "devDependencies": {
    "eslint": "7.32.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "5.2.0",
    "husky": "7.0.4",
    "jest": "27.4.5",
    "lint-staged": "12.1.4"
  },
  "eslintConfig": {
    "env": {
      "commonjs": true,
      "es2021": true,
      "jest": true,
      "node": true
    },
    "extends": [
      "standard"
    ],
    "parserOptions": {
      "ecmaVersion": 12
    },
    "rules": {}
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageProvider": "v8"
  },
  "lint-staged": {
    "*.js": "eslint --cache"
  }
}
